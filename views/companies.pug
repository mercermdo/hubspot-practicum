extends layout

block content
  h2 Add a Hockey Team (Company)

  form(action="/companies" method="POST")
    label(for="team_location") City:
    input(type="text" name="team_location" required)
    br

    label(for="team_name") Team Name:
    input(type="text" name="team_name" required)
    br

    label(for="team_country") Country:
    input(type="text" name="team_country" required)
    br

    label(for="team_division") Division:
    input(type="text" name="team_division" required)
    br

    button(type="submit") Submit
