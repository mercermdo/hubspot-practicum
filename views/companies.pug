extends layout

block content
  h2 All Professional Hockey Teams

  if companies.length
    .company-list
      each company in companies
        .company-card
          h3= company.properties.name
          p Division: #{company.properties.team_division || 'N/A'}
          p Country: #{company.properties.team_country || 'N/A'}
  else
    p No valid teams found.
